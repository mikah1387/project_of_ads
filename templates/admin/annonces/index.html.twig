{% extends 'base.html.twig' %}

{% block title %} gestion des annonces {% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css ">

{% endblock stylesheets %}
{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js   " defer></script>

{% endblock %}
{% block body %}

<section class="admin">


    {% include "partials/_navbaradmin.html.twig" %}

    <div class="content_admin">
        <h1> Gestion des annonces </h1>

        <table>

            <thead>
                <tr>
                    <th> ID</th>
                    <th> Titre</th>
                    <th>Categorie</th>
                    <th>Created_at</th>
                    <th>Is_active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for annonce in annonces %}
                <tr>
                    <td> {{annonce.id}} </td>
                    <td> {{annonce.title}} </td>
                    <td> {{annonce.categories.name}} </td>
                    <td> {{annonce.createdAt|date("m/d/Y")}} </td>
                    <td> <input type="checkbox" {{annonce.IsActive ? 'checked' :""}} data-id={{annonce.id}}>
                    </td>

                    <td>

                        <a href="{{path('admin_annonces_delete',{id:annonce.id})}}" class="btn_btn suprim_anno"
                            data-bs-toggle="modal" data-bs-target="#exampleModal" data-id="{{annonce.id}}"
                            data-title="{{annonce.title}}"> supprimer</a>
                    </td>

                </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"     aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Supprimer une annonce</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p> </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">X</button>
                    <a href="" type="button" class="btn btn-primary confirm_delete">Confirmez</a>
                </div>
            </div>
        </div>
    </div>


</section>

{% endblock %}